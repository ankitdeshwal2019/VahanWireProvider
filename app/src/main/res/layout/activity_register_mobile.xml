<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/provider_login_two"
    tools:context=".ragistration.RegisterMobile">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"

                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivBackLogin"
                    android:layout_margin="@dimen/size_10dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="@dimen/size_5dp"
                    android:src="@drawable/back_wihte"/>

                <ImageView
                    android:layout_marginTop="@dimen/size_20dp"
                    android:layout_gravity="center"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/logo"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/size_40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <RelativeLayout
                    android:layout_marginTop="@dimen/size_40dp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_50dp"
                    android:background="@color/colorWhite"
                    android:layout_marginRight="@dimen/size_30dp"
                    android:layout_marginLeft="@dimen/size_30dp">

                    <ImageView
                        android:padding="@dimen/size_10dp"
                        android:id="@+id/iv_mobile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/mobile_no"/>

                    <com.electrom.vahanwireprovider.utility.CustomEditText
                        android:layout_toRightOf="@id/iv_mobile"
                        android:id="@+id/etRegisterMobile"
                        android:background="#fff"
                        android:inputType="number"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/size_5dp"
                        android:hint="Mobile no"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </RelativeLayout>


                <com.electrom.vahanwireprovider.utility.CustomButton
                    android:id="@+id/btnSendOtp"
                    android:layout_marginTop="@dimen/size_20dp"
                    android:layout_width="200dp"
                    android:layout_height="@dimen/size_50dp"
                    android:gravity="center"
                    android:background="@drawable/button"
                    android:paddingRight="@dimen/size_20dp"
                    android:paddingLeft="@dimen/size_20dp"
                    android:textSize="@dimen/size_20sp"
                    android:layout_marginBottom="@dimen/size_40dp"
                    android:text="SEND OTP"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>
    </LinearLayout>