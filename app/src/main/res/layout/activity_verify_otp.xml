<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/provider_login_three"
    tools:context=".ragistration.RegisterMobile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:gravity="top"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivBackLogin"
            android:layout_margin="@dimen/size_10dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="@dimen/size_5dp"
            android:src="@drawable/back_wihte"/>

        <ImageView
            android:layout_gravity="center"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/logo"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <RelativeLayout
            android:layout_marginTop="@dimen/size_50dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_50dp"
            android:background="@color/colorWhite"
            android:layout_marginRight="@dimen/size_30dp"
            android:layout_marginLeft="@dimen/size_30dp">

            <com.electrom.vahanwireprovider.utility.CustomEditText
                android:id="@+id/etVerifyOtp"
                android:background="#fff"
                android:paddingLeft="@dimen/size_15dp"
                android:hint="Enter OTP"

                android:inputType="numberPassword"
                android:gravity="center"
                android:maxLength="4"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </RelativeLayout>


        <com.electrom.vahanwireprovider.utility.CustomTextView
            android:id="@+id/tvResendOtp"
            android:layout_marginTop="@dimen/size_30dp"
            android:layout_width="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/colorWhite"
            android:layout_height="wrap_content"
            android:text="Resend OTP "/>


        <com.electrom.vahanwireprovider.utility.CustomButton
            android:id="@+id/btnVerifyOtp"
            android:layout_marginTop="@dimen/size_30dp"
            android:layout_width="200dp"
            android:layout_height="@dimen/size_50dp"
            android:gravity="center"
            android:background="@drawable/button"
            android:paddingRight="@dimen/size_20dp"
            android:paddingLeft="@dimen/size_20dp"
            android:textSize="@dimen/size_20sp"
            android:text="VERIFY"/>

    </LinearLayout>

</LinearLayout>